{
    "autoload": {
        "psr-4": {
            "Glutio\\EmailLinks\\": "src/"
        }
    },    
    "name": "glutio/email-links",
    "description": "Convert Flarum emails to HTML and make email links clickable.",
    "type": "flarum-extension",
    "version": "0.0.1",
    "keywords": [
        "flarum",
        "html",
        "email",
        "link",
        "links"
    ],
    "homepage": "https://github.com/glutio/flarum.domainsso",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.8"
    },
    "support": {
        "source": "https://github.com/glutio/flarum.email-links",
    },
    "extra": {
        "flarum-extension": {
            "title": "EmailLinks",
            "category": "feature",
            "icon": {
                "name": "fas fa-user-lock",
                "backgroundColor": "#555b51",
                "color": "#fff"
            }
        }
    }
}
